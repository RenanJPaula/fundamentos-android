<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- Custom application theme. -->
    <style name="AppThemeMaterial" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize the Color Palette: https://developer.android.com/training/material/theme.html -->
        <item name="colorPrimaryDark">@color/material_900</item>
        <item name="colorPrimary">@color/material_600</item>
        <item name="colorAccent">@color/material_600</item>
        <item name="android:windowBackground">@color/gray</item>
        <!-- Change default button style -->
        <item name="android:buttonStyle">@style/MyButton</item>
    </style>

    <style name="MyButton" parent="@android:style/Widget.Button">
        <!-- Colors: http://www.google.com/design/spec/style/color.html#color-color-palette -->
        <item name="android:background">@drawable/button_default_background</item>
        <item name="android:textColor">@color/white</item>
        <!-- Buttons: http://www.google.com/design/spec/components/buttons.html#buttons-usage -->
        <item name="android:minWidth">88dp</item>
        <item name="android:height">48dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <!-- Typography: http://www.google.com/design/spec/style/typography.html#typography-styles -->
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
